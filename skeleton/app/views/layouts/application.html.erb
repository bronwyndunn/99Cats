<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCatsDay1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <ul>
    <% if current_user %>
    <li><%= current_user.user_name %> </li>
    <li> <%= button_to("Logout", session_url, method: :delete) %> </li>
    <% else %>
    <li>  <%= button_to("Sign Up", new_user_url, method: :get) %></li>
    <li> <%= button_to("Log In", new_session_url, method: :get) %></li>
    <% end %>
  </ul>
</header>
<%= yield %>
</body>
</html>
